{
  "name": "permit-custom",
  "version": "1.0.0",
  "description": "permit-custom repo with foundry",
  "main": "index.js",
  "repository": "https://github.com/imantisco/permit-custom.git",
  "author": "minwoo <minwoo@imantisco.com>",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "@rari-capital/solmate": "^6.4.0",
    "ds-test": "https://github.com/dapphub/ds-test"
  },
  "devDependencies": {
    "@prb/test": "^0.6.4",
    "forge-std": "github:foundry-rs/forge-std#v1.7.6",
    "prettier": "^3.0.0",
    "solhint": "^3.6.2"
  },
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "build": "forge build",
    "lint": "bun run lint:sol && bun run prettier:check",
    "lint:sol": "forge fmt --check && bun solhint {script,src,test}/**/*.sol",
    "prettier:check": "prettier --check **/*.{json,md,yml} --ignore-path=.prettierignore",
    "prettier:write": "prettier --write **/*.{json,md,yml} --ignore-path=.prettierignore",
    "test": "forge test",
    "test:fork:mainnet": "forge test --fork-url mainnet",
    "test:fork:sepolia": "forge test --fork-url sepolia",
    "test:fork:bsc": "forge test --fork-url bsc",
    "test:fork:bsc-test": "forge test --fork-url bsc-test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage"
  }
}
